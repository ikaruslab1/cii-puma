---
const title = Astro.props.title;
const subtitle = Astro.props.subtitle;
const color = Astro.props.color;
---

<div
  data-aos="fade-up"
  data-aos-duration="1000"
  class={`border-l-5 border-${color} pl-4`}
>
  <h3 class="text-5xl font-bold">{title}</h3>
  <p class="text-2xl text-slate-600">{subtitle}</p>
</div>
