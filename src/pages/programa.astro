---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../layouts/Header.astro";
import Act from "../components/astro/programa/Act.astro";
import Tittle from "../components/astro/text/Tittle.astro";

const title = "Programa";

const Eje1 = "Género, Inclusion & Grupos Marginados";
const Eje2 = "Migración: Violencia & Criminalización";
const Eje3 = "IA & TE";
const Eje4 = "Habilidades para la vida";
const Eje5 = "Sustentabilidad";
---

<BaseLayout title={title}>
  <Header color="f6f6f6" height="75vh">
    <h1
      class="text-center font-bold uppercase text-azul text-6xl md:text-7xl lg:text-9xl pb-6"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="300"
    >
      Programa
    </h1>
    <div
      class="flex justify-center pb-4"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="300"
    >
      <hr class="w-1/2 border-oro border-2" />
    </div>
    <div
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="400"
      class="flex gap-4 w-full justify-center pt-4"
    >
    </div>
  </Header>
  <section class="my-16 px-4">
    <nav
      class="tabs space-x-1 overflow-x-auto shadow-xl"
      aria-label="Tabs"
      role="tablist"
      aria-orientation="horizontal"
    >
      <button
        type="button"
        class="grow btn btn-text active-tab:bg-azul active-tab:text-white hover:text-azul active hover:bg-oro/20"
        id="tabs-fill-item-1"
        data-tab="#tabs-fill-1"
        aria-controls="tabs-fill-1"
        role="tab"
        aria-selected="false"
      >
        Lunes 23
      </button>
      <button
        type="button"
        class="grow btn btn-text active-tab:bg-azul active-tab:text-white hover:text-azul hover:bg-oro/20"
        id="tabs-fill-item-2"
        data-tab="#tabs-fill-2"
        aria-controls="tabs-fill-2"
        role="tab"
        aria-selected="false"
      >
        Martes 24
      </button>
      <button
        type="button"
        class="grow btn btn-text active-tab:bg-azul active-tab:text-white hover:text-azul hover:bg-oro/20"
        id="tabs-fill-item-3"
        data-tab="#tabs-fill-3"
        aria-controls="tabs-fill-3"
        role="tab"
        aria-selected="false"
      >
        Miércoles 25
      </button>
      <button
        type="button"
        class="grow btn btn-text active-tab:bg-azul active-tab:text-white hover:text-azul hover:bg-oro/20"
        id="tabs-fill-item-4"
        data-tab="#tabs-fill-4"
        aria-controls="tabs-fill-4"
        role="tab"
        aria-selected="false"
      >
        Jueves 26
      </button>
    </nav>

    <div class="pt-16">
      <div id="tabs-fill-1" role="tabpanel" aria-labelledby="tabs-fill-item-1">
        <div class="grid grid-cols-2 px-4 md:px-16 xl:px-64">
          <!-- Lunes -->
          <Act titulo="Registro" horario="9:00-9:15" />
          <Act titulo="Inauguración Congreso" horario="09:15-09:30" />
          <Act
            tag={Eje1}
            titulo="CONFERENCIA MAGISTRAL A (AM)"
            horario="10:00-11:00"
          />
          <Act
            tag={Eje1}
            titulo="CHARLA A"
            horario="11:00-11:30"
            presentadores="Por definir"
          />
          <Act
            tag={Eje1}
            titulo="CHARLA B"
            horario="11:30-12:00"
            presentadores="Por definir"
          />
          <Act titulo="Café" horario="12:00-12:15" />
          <Act tag="POSTERS" titulo="POSTERS" horario="12:15-13:30" />
          <Act tag="Taller" titulo="Taller" horario="13:30-15:00" />
          <Act titulo="Receso/Comida" horario="15:00-17:00" />
          <Act
            tag={Eje1}
            titulo="CONFERENCIA MAGISTRAL A (PM)"
            horario="17:00-18:00"
            presentadores="Por definir"
          />
          <Act
            tag="Charlas Paralelas"
            titulo="Charlas Paralelas"
            horario="18:00-18:30"
          />
          <Act
            titulo="POSTERS-RECONOCIMIENTOS"
            horario="18:30-18:45"
            ultimo={true}
          />

          <div class="py-16">
            <Tittle title="Paralelas: 18:00-18:30 h" subtitle="" color="oro" />
          </div>

          <Act titulo="PARALELA (ROOM A)" />
          <Act titulo="PARALELA (ROOM B)" />
          <Act titulo="PARALELA (ROOM C)" />
          <Act titulo="PARALELA (ROOM D)" ultimo={true} />

          <!-- Lunes -->
        </div>
      </div>
      <div
        id="tabs-fill-2"
        class="hidden"
        role="tabpanel"
        aria-labelledby="tabs-fill-item-2"
      >
        <div class="grid grid-cols-2 px-4 md:px-16 xl:px-64">
          <!-- Martes -->

          <Act
            tag={Eje2}
            titulo="CONFERENCIA MAGISTRAL B (AM)"
            horario="10:00-11:00"
            presentadores="Por definir"
          />
          <Act
            tag={Eje2}
            titulo="CHARLA A"
            horario="11:00-11:30"
            presentadores="Por definir"
          />
          <Act
            tag={Eje2}
            titulo="CHARLA B"
            horario="11:30-12:00"
            presentadores="Por definir"
          />
          <Act titulo="Café" horario="12:00-12:15" />
          <Act tag="POSTERS" titulo="POSTERS" horario="12:15-13:30" />
          <Act tag="Taller" titulo="Taller" horario="13:30-15:00" />
          <Act titulo="Receso/Comida" horario="15:00-17:00" />
          <Act
            tag={Eje2}
            titulo="CONFERENCIA MAGISTRAL B (PM)"
            horario="17:00-18:00"
            presentadores="Por definir"
          />
          <Act
            tag="Charlas Paralelas"
            titulo="Charlas Paralelas"
            horario="18:00-18:30"
          />
          <Act
            titulo="POSTERS-RECONOCIMIENTOS"
            horario="18:30-18:45"
            ultimo={true}
          />

          <div class="py-16">
            <Tittle title="Paralelas: 18:00-18:30 h" subtitle="" color="oro" />
          </div>

          <Act titulo="PARALELA (ROOM A)" />
          <Act titulo="PARALELA (ROOM B)" />
          <Act titulo="PARALELA (ROOM C)" />
          <Act titulo="PARALELA (ROOM D)" ultimo={true} />

          <!-- Martes -->
        </div>
      </div>
      <div
        id="tabs-fill-3"
        class="hidden"
        role="tabpanel"
        aria-labelledby="tabs-fill-item-3"
      >
        <div class="grid grid-cols-2 px-4 md:px-16 xl:px-64">
          <!-- Miércoles -->

          <Act
            tag={Eje3}
            titulo="CONFERENCIA MAGISTRAL C (AM)"
            horario="10:00-11:00"
            presentadores="Por definir"
          />
          <Act
            tag={Eje3}
            titulo="CHARLA A"
            horario="11:00-11:30"
            presentadores="Por definir"
          />
          <Act
            tag={Eje3}
            titulo="CHARLA B"
            horario="11:30-12:00"
            presentadores="Por definir"
          />
          <Act titulo="Café" horario="12:00-12:15" />
          <Act tag="POSTERS" titulo="POSTERS" horario="12:15-13:30" />
          <Act tag="Taller" titulo="Taller" horario="13:30-15:00" />
          <Act titulo="Receso/Comida" horario="15:00-17:00" />
          <Act
            tag={Eje4}
            titulo="CONFERENCIA MAGISTRAL C (PM)"
            horario="17:00-18:00"
            presentadores="Por definir"
          />
          <Act
            tag="Charlas Paralelas"
            titulo="Charlas Paralelas"
            horario="18:00-18:30"
          />
          <Act
            titulo="POSTERS-RECONOCIMIENTOS"
            horario="18:30-18:45"
            ultimo={true}
          />

          <div class="py-16">
            <Tittle title="Paralelas: 18:00-18:30 h" subtitle="" color="oro" />
          </div>

          <Act titulo="PARALELA (ROOM A)" />
          <Act titulo="PARALELA (ROOM B)" />
          <Act titulo="PARALELA (ROOM C)" />
          <Act titulo="PARALELA (ROOM D)" ultimo={true} />

          <!-- Miércoles -->
        </div>
      </div>
      <div
        id="tabs-fill-4"
        class="hidden"
        role="tabpanel"
        aria-labelledby="tabs-fill-item-4"
      >
        <div class="grid grid-cols-2 px-4 md:px-16 xl:px-64">
          <!-- Jueves -->

          <Act
            tag={Eje5}
            titulo="CONFERENCIA MAGISTRAL D (AM)"
            horario="10:00-11:00"
            presentadores="Por definir"
          />
          <Act
            tag={Eje5}
            titulo="CHARLA A"
            horario="11:00-11:30"
            presentadores="Por definir"
          />
          <Act
            tag={Eje5}
            titulo="CHARLA B"
            horario="11:30-12:00"
            presentadores="Por definir"
          />
          <Act titulo="Café" horario="12:00-12:15" />
          <Act tag="POSTERS" titulo="POSTERS" horario="12:15-13:30" />
          <Act
            tag="Taller"
            titulo="Análisis del Agua potable en tu hogar"
            horario="13:30-15:00"
          />
          <Act titulo="Receso/Comida" horario="15:00-17:00" />
          <Act
            tag={Eje5}
            titulo="CONFERENCIA MAGISTRAL D (PM)"
            horario="17:00-18:00"
            presentadores="Por definir"
          />
          <Act
            tag="Charlas Paralelas"
            titulo="Charlas Paralelas"
            horario="18:00-18:30"
          />
          <Act
            titulo="POSTERS-RECONOCIMIENTOS/Clausura"
            horario="18:30-18:45"
            ultimo={true}
          />

          <div class="py-16">
            <Tittle title="Paralelas: 18:00-18:30 h" subtitle="" color="oro" />
          </div>

          <Act titulo="PARALELA (ROOM A)" />
          <Act titulo="PARALELA (ROOM B)" />
          <Act titulo="PARALELA (ROOM C)" />
          <Act titulo="PARALELA (ROOM D)" ultimo={true} />

          <!-- Jueves -->
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
